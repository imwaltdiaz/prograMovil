# Configuración del servidor
PORT=3001
NODE_ENV=development

# Base de datos
DB_PATH=./data_base/db2.db

# Seguridad
JWT_SECRET=cambia_esta_clave_por_algo_super_seguro_en_produccion
BCRYPT_ROUNDS=12

# CORS - Dominios permitidos (separados por comas)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000    # 15 minutos en milisegundos
RATE_LIMIT_MAX_REQUESTS=100    # Máximo de requests por ventana de tiempo

# Logging
LOG_LEVEL=combined             # combined, common, dev, short, tiny
